<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tomto2"
    android:orientation="vertical"
    tools:context="com.example.oryossipof.alphahotal.DiningHoursActivity">


    <TextView
        android:id="@+id/DiningHeader"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/dininghours_str"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/diningtextview"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday-Friday :10:00-18:00"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"/>


</LinearLayout>
